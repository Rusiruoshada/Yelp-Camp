<% layout('layouts/boilerplate')%>

<div class="container d-flex justify-content-center align-items-center mb-3">
  <div class="row">
    <div class=" col-6 offset-3">
      <div class="card shadow mb-3">
          <img src="https://images.unsplash.com/photo-1485199692108-c3b5069de6a0?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=870&q=80" alt="" class="card-img-top">
        <div class="card-body">
            <h1 class="card-title">Login</h1>
            <form action="/login" method="POST" class="needs-validation" novalidate>
              <div class="mb-3">
                <label class="form-label" for="username">Username: </label>
                <input
                  class="form-control"
                  type="text"
                  id="username"
                  name="username"
                  required
                  autofocus
                />
                <div class="valid-feedback">Looks good!</div>
              </div>
    
              <div class="mb-3">
                <label class="form-label" for="password">Password: </label>
                <input
                  class="form-control"
                  type="password"
                  id="password"
                  name="password"
                  required
                />
                <div class="valid-feedback">Looks good!</div>
              </div>
              <div class="d-grid gap-2">
                <button class="btn btn-success">Login</button>
              </div>
            </form>
        </div>
      </div>
    </div>
  </div>
</div>
