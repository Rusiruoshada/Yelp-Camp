<% layout('layouts/boilerplate')%>

<div class="row">
    <h1 class="text-center">Edit Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST" novalidate class="needs-validation" 
          enctype="multipart/form-data">
        <div class="mb-3">
          <label class="form-label" for="title">Title: </label>
          <input
            class="form-control"
            type="text"
            id="title"
            name="campground[title]"
            value="<%=campground.title%>"
            required
          />
        </div>
        <div class="mb-3">
          <label class="form-label" for="location">Location: </label>
          <input
            class="form-control"
            type="text"
            id="location"
            name="campground[location]"
            value="<%=campground.location%>"
            required
          />
        </div>

      <div class="mb-3 custom-file">
        <label for="image" class="form-label ">Add Image(s)...</label>
        <input class="form-control" type="file" id="image" multiple name="image">
      </div>
  
        <div class="mb-3">
          <label class="form-label" for="price">Campground Price: </label>
          <div class="input-group">
            <span class="input-group-text" id="price-label">$</span>
            <input
              type="text"
              class="form-control"
              id="price"
              aria-label="price"
              aria-describedby="price-label"
              name="campground[price]"
              value="<%=campground.price%>"
              required
            />
          </div>
        </div>
  
        <div class="mb-3">
          <label class="form-label" for="description">Description: </label>
          <textarea
            class="form-control"
            type="text"
            id="description"
            name="campground[description]"
            required
          ><%=campground.description%></textarea>
        </div>
        <div class="mb-3">
          <% campground.image.forEach(function(img,i) { %>
          <img src="<%= img.url %>" alt="" class="img-thumbnail">
          <div class="form-check-inline">
            <input type="checkbox" id="img-<%= i %>" name="deleteImage[]" value="<%= img.filename %>">
          </div>
          <label for="img-<%= i %>">Delete</label>
          <% }) %>
        </div>
        <div class="mb-3">
          <button class="btn btn-primary">Save Campground</button>
        </div>
      </form>
      <a class="btn btn-outline-secondary mb-5" href="/campgrounds">All campgrounds</a>
    </div>
  </div>
  